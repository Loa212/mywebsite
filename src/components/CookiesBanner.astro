<!-- Cookie Preferences Modal -->
<dialog id="cookiePrefsModal" class="modal z-40">
  <div class="modal-box">
    <h3 class="font-bold text-lg lg:ps-8">🍪 Cookie Preferences 🍪</h3>
    <form method="dialog" class="mt-4 lg:p-8">
      <div class="mb-16 space-y-4">
        <label class="cursor-pointer label">
          <span class="label-text me-4">
            <h4 class="text-base font-bold">Strictly Necessary</h4>
            <p>
              These cookies are necessary for the website to function and cannot
              be switched off in our systems.
            </p>
          </span>
          <input
            type="checkbox"
            id="strictlyNecessaryCheckbox"
            class="checkbox checkbox-success"
          />
        </label>

        <label class="cursor-pointer label">
          <span class="label-text me-4">
            <h4 class="text-base font-bold">Preferences</h4>
            <p>
              These cookies allow us to count visits and traffic sources so we
              can measure and improve the performance of our site.
            </p>
          </span>
          <input
            type="checkbox"
            id="preferencesCheckbox"
            class="checkbox checkbox-success"
          />
        </label>

        <label class="cursor-pointer label">
          <span class="label-text me-4">
            <h4 class="text-base font-bold">Marketing</h4>
            <p>
              These cookies may be set through our site by our advertising
              partners.
            </p>
          </span>
          <input
            type="checkbox"
            id="thirdPartyCheckbox"
            class="checkbox checkbox-success"
          />
        </label>
      </div>

      <div class="modal-action">
        <button id="saveCookiePrefs" class="btn btn-success"
          >Save Preferences</button
        >
      </div>
    </form>
  </div>
  <div class="modal-backdrop bg-black/20 backdrop-blur-sm">
    <button id="closeCookiePrefsModal">close</button>
  </div>
</dialog>

<script src="../utils/cookiebanner.ts"></script>
