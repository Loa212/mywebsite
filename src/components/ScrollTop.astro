---
import { ArrowCircleUp } from "./icons";
---

<a
  id="scroll-top"
  aria-label="back to top"
  href="#top"
  class="btn btn-circle btn-primary shadow-xl fixed bottom-4 right-4 z-50 hidden"
>
  <ArrowCircleUp size={36} />
</a>

<script>
  import { mountScrolltopListener } from "../utils/scrolltop-listener";

  document.addEventListener("astro:page-load", () => mountScrolltopListener());
</script>
