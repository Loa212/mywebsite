---

<section class="text-gray-600 body-font">
  <div class="container px-5 py-12 lg:py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h1 class="plans-title">Our Plans</h1>
      <p
        class="lg:w-2/3 mx-auto leading-relaxed text-base text-gray-500 max-w-xl my-4"
      >
        Tailored Solutions for Your Business. We offer a wide range of services
        to help you grow your business.
      </p>
      <div class="flex mx-auto rounded overflow-hidden mt-6">
        <!-- <button class="py-1 px-4 bg-blue-500 text-white focus:outline-none">Monthly</button>
          <button class="py-1 px-4 focus:outline-none">Annually</button> -->
        <div class="form-control">
          <label class="label cursor-pointer gap-4">
            <span class="label-text">Monthly</span>
            <input type="checkbox" class="toggle toggle-primary" checked />
            <span class="label-text">Yearly</span>
          </label>
        </div>
      </div>
    </div>
    <div class="flex flex-wrap -m-4">
      <!-- ------------ STARTER ------------ -->
      <div class="p-4 xl:w-1/3 md:w-1/2 w-full">
        <div
          class="h-full p-6 rounded-lg border-2 border-gray-300 flex flex-col relative overflow-hidden"
        >
          <h2 class="text-sm tracking-widest title-font mb-1 font-medium">
            STARTER
          </h2>
          <h1
            class="text-5xl text-gray-900 leading-none flex items-center pb-4 mb-4 border-b border-gray-200"
          >
            <span class="starter-yearly">€57</span>
            <span class="starter-monthly hidden">€64</span>
            <span class="text-lg ml-1 font-normal text-gray-500">/mo</span>
          </h1>
          <p class="flex items-center text-gray-600 mb-2">
            <span
              class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-green-700 text-white rounded-full flex-shrink-0"
            >
              <Check size={12} />
            </span>Custom Design (max 3 pages)
          </p>
          <p class="flex items-center text-gray-600 mb-2">
            <span
              class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-green-700 text-white rounded-full flex-shrink-0"
            >
              <Check size={12} />
            </span>Custom Domain
          </p>
          <p class="flex items-center text-gray-600 mb-2">
            <span
              class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-green-700 text-white rounded-full flex-shrink-0"
            >
              <Check size={12} />
            </span>Static Website (SSG)
          </p>
          <p class="flex items-center text-gray-600 mb-2">
            <span
              class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-green-700 text-white rounded-full flex-shrink-0"
            >
              <Check size={12} />
            </span>10/10 SEO & Performance Score
          </p>
          <p class="flex items-center text-gray-600 mb-6">
            <span
              class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-green-700 text-white rounded-full flex-shrink-0"
            >
              <Check size={12} />
            </span>30 Days money back guarantee
          </p>
          <button
            class="flex items-center mt-auto text-white bg-gray-500 border-0 py-2 px-4 w-full focus:outline-none hover:bg-gray-600 rounded"
            >Get started
            <svg
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              class="w-4 h-4 ml-auto"
              viewBox="0 0 24 24"
            >
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </button>
          <p class="text-xs text-gray-500 mt-3 text-center">
            The price rapresents the starting price for the service. The final
            price will be determined after a free consultation.
          </p>
        </div>
      </div>
      <!-- ------------ PREMIUM ------------ -->
      <div class="p-4 xl:w-1/3 md:w-1/2 w-full">
        <div
          class="h-full p-6 rounded-lg border-2 border-blue-600 flex flex-col relative overflow-hidden"
        >
          <span
            class="bg-blue-600 text-white px-3 py-1 tracking-widest text-xs absolute right-0 top-0 rounded-bl"
            >POPULAR</span
          >
          <h2 class="text-sm tracking-widest title-font mb-1 font-medium">
            PREMIUM
          </h2>
          <h1
            class="text-5xl text-gray-900 leading-none flex items-center pb-4 mb-4 border-b border-gray-200"
          >
            <span class="premium-yearly">€129</span>
            <span class="premium-monthly hidden">€154</span>
            <span class="text-lg ml-1 font-normal text-gray-500">/mo</span>
          </h1>
          <p class="flex items-center text-gray-600 mb-2">
            <span
              class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-green-700 text-white rounded-full flex-shrink-0"
            >
              <Check size={12} />
            </span>
            <b>Everything in Starter</b>
          </p>
          <p class="flex items-center text-gray-600 mb-2">
            <span
              class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-green-700 text-white rounded-full flex-shrink-0"
            >
              <Check size={12} />
            </span>
             Unlimited Pages
          </p>
          <p class="flex items-center text-gray-600 mb-2">
            <span
              class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-green-700 text-white rounded-full flex-shrink-0"
            >
              <Check size={12} />
            </span>
             Content Management System
          </p>
          <p class="flex items-center text-gray-600 mb-2">
            <span
              class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-green-700 text-white rounded-full flex-shrink-0"
            >
              <Check size={12} />
            </span>
             Email Marketing Integration
          </p>
          <p class="flex items-center text-gray-600 mb-2">
            <span
              class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-green-700 text-white rounded-full flex-shrink-0"
            >
              <Check size={12} />
            </span>
             3 months of free maintenance
          </p>

          <button
            class="flex items-center mt-auto text-white bg-blue-600 border-0 py-2 px-4 w-full focus:outline-none hover:bg-blue-700 rounded"
            >Get Started
            <svg
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              class="w-4 h-4 ml-auto"
              viewBox="0 0 24 24"
            >
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </button>
          <p class="text-xs text-gray-500 mt-3 text-center">
            The price rapresents the starting price for the service. The final
            price will be determined after a free consultation.
          </p>
        </div>
      </div>
      <!-- ------------ ENTERPRISE ------------ -->
      <div class="p-4 xl:w-1/3 md:w-1/2 w-full">
        <div
          class="h-full p-6 rounded-lg border-2 border-gray-300 flex flex-col relative overflow-hidden"
        >
          <h2 class="text-sm tracking-widest title-font mb-1 font-medium">
            ENTERPRISE
          </h2>
          <h1
            class="text-5xl text-gray-900 leading-none flex items-center pb-4 mb-4 border-b border-gray-200"
          >
            <span>-</span>
          </h1>
          <p class="flex items-center text-gray-600 mb-2">
            We offer custom solutions for your business ranging from e-commerce
            to web applications and more.
            <br />
            <br />
             Contact us for a free consultation.
          </p>
          <button
            class="flex items-center mt-auto text-white bg-gray-500 border-0 py-2 px-4 w-full focus:outline-none hover:bg-gray-600 rounded"
            >Contact Us
            <svg
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              class="w-4 h-4 ml-auto"
              viewBox="0 0 24 24"
            >
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </button>
          <p class="text-xs text-gray-500 mt-3 text-center">
            After a brief consultation, we will provide you with a custom quote
            for your project.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .plans-title {
    color: #252525;
    font-size: 48px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }
</style>

<script>
  const toggle = document.querySelector<HTMLInputElement>(".toggle");
  const starterMonthly = document.querySelector(".starter-monthly");
  const starterYearly = document.querySelector(".starter-yearly");
  const premiumMonthly = document.querySelector(".premium-monthly");
  const premiumYearly = document.querySelector(".premium-yearly");
  const enterpriseMonthly = document.querySelector(".enterprise-monthly");
  const enterpriseYearly = document.querySelector(".enterprise-yearly");

  const mountPricing = () => {
    // check that toggle is not null
    if (toggle == null) return;
    toggle.addEventListener("click", () => {
      // when toggle is clicked, check if it is checked
      if (toggle.checked) {
        // if it is checked, show monthly prices
        starterMonthly?.classList.toggle("hidden");
        starterYearly?.classList.toggle("hidden");
        premiumMonthly?.classList.toggle("hidden");
        premiumYearly?.classList.toggle("hidden");
        enterpriseMonthly?.classList.toggle("hidden");
        enterpriseYearly?.classList.toggle("hidden");
      } else {
        // if it is not checked, show yearly prices
        starterMonthly?.classList.toggle("hidden");
        starterYearly?.classList.toggle("hidden");
        premiumMonthly?.classList.toggle("hidden");
        premiumYearly?.classList.toggle("hidden");
        enterpriseMonthly?.classList.toggle("hidden");
        enterpriseYearly?.classList.toggle("hidden");
      }
    });
  };

  mountPricing();
</script>
