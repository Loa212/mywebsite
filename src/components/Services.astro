---
import { type CollectionEntry, getEntry } from "astro:content";
import { WebDev, ArrowRight } from "./icons";
import { getCollection } from "astro:content";
import servicesStack from "../assets/services_stack.webp";
import { Image } from "astro:assets";
import { BackdropShape } from ".";

export interface Props {
  i18nId: CollectionEntry<"i18n">["id"];
}

const { i18nId } = Astro.props;

const servicesCollection = await getCollection("services");

const i18n = await getEntry("i18n", i18nId);
const { services } = i18n.data;
---

<section class="pt-24 pb-0 lg:pb-24">
  <div class="container px-5 pb-24 mx-auto">
    <div class="flex flex-wrap w-full mb-12 flex-col items-center text-center space-y-6">
      <h2>
        Our Services 
        <!-- {services.title} -->
      </h2>
      <p class="w-full max-w-xl leading-relaxed text-slate-700/80">
        <!-- {services.subtitle} -->
        Tailored Solutions for Your Business. We offer a wide range of services to help you grow your business.
      </p>
    </div>
    
    
    <div class="grid lg:grid-cols-2 gap-24 relative">
      <BackdropShape />
      <div class="space-y-4">
        {
          servicesCollection.map((s, idx) => {
            return (
        <div class="collapse collapse-plus bg-gradient-to-br from-primary/20 to-blue-400/20 ring-1 ring-primary:40 hover:ring-primary">
          <input type="radio" name="my-accordion-3" checked={idx===0} class="" /> 
          <div class="collapse-title text-xl font-medium flex items-center justify-start gap-3">
            <WebDev size={48} />
            <span>{s.data.title}</span>
          </div>
          <div class="collapse-content mx-9 text-justify"> 
            <p>Our company specializes in web development, crafting dynamic and interactive websites tailored to your business needs. With expertise in front-end and back-end technologies, we deliver responsive, secure, and user-friendly web solutions that drive your online presence and growth. Join us to transform your digital vision into reality.</p>
            
            <a href="#" class="btn btn-link m-0 p-0">
              Learn More
              <ArrowRight size={24} />
              </a>
         
            </div>
        </div>
        )}
        )}
      </div>
      <Image
        class="object-cover object-center rounded-lg border-t border-gray-200"
        src={servicesStack}
        alt="services stack"
      />
    </div>
  </div>
</section>


<style>
   h2 {
    color: #252525;
    font-family: Helvetica;
    font-size: 48px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    }

    @media (max-width: 767px) {
      h2 {
        font-size: 36px;
      }
    }
</style>